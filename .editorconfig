[*.{fs,fsx}]
fsharp_space_before_uppercase_invocation = true
fsharp_multiline_bracket_style = cramped
fsharp_max_record_number_of_items = 3
fsharp_record_multiline_formatter = fsharp_max_record_number_of_items

fsharp_max_array_or_list_width = 3
fsharp_array_or_list_multiline_formatter = number_of_items

fsharp_max_value_binding_width = 100
fsharp_max_function_binding_width = 80

fsharp_max_dot_get_expression_width = 80